{
    "name": "@hyperbridge/blockhub-web-service",
    "description": "BlockHub Web Service",
    "repository": {},
    "license": "SEE LICENSE IN LICENSE.md",
    "publishConfig": {
        "access": "private"
    },
    "version": "1.0.0",
    "scripts": {
        "tsc": "./node_modules/tsc",
        "watch": "tsc -w",
        "build-development": "cross-env NODE_ENV=development tsc --listEmittedFiles",
        "build-production": "cross-env NODE_ENV=production tsc",
        "build": "tsc",
        "start": "npm run build-production && node ./build/src/index.js",
        "dev": "cross-env NODE_ENV=development yarn run nodemon",
        "migrate-all": "ts-node -P ./tsconfig.json ./node_modules/.bin/knex migrate:latest --knexfile knexfile.js",
        "migrate-heroku": "heroku run 'knex migrate:latest'",
        "seed-all": "ts-node -P ./tsconfig.json ~/.nvm/versions/node/v10.8.0/bin/knex seed:run --knexfile knexfile.js",
        "seed": "ts-node -P ./tsconfig.json ~/.nvm/versions/node/v10.8.0/bin/knex seed:run --knexfile knexfile.js --specific=",
        "test-api-call": "curl http://localhost:9001/api/v1/ping",
        "knex": "ts-node -P ./tsconfig.json ./node_modules/.bin/knex",
        "refresh-db": "yarn migrate-all && yarn seed-all",
        "deploy-beta": "cp -R dist/ ../../../beta-api.blockhub.gg && cd ../../../beta-api.blockhub.gg && rm CNAME && git add -A && git commit -m \"Rebuild\" && git push && cd ../../../blockhub/services/web",
        "deploy-preview": "cp -R dist/ ../../../preview-api.blockhub.gg && cd ../../../preview-api.blockhub.gg && rm CNAME && git add -A && git commit -m \"Rebuild\" && git push && cd ../../../blockhub/services/web",
        "deploy-staging": "cp -R dist/ ../../../staging-api.blockhub.gg && cd ../../../staging-api.blockhub.gg && rm CNAME && git add -A && git commit -m \"Rebuild\" && git push && cd ../../../blockhub/services/web",
        "deploy-production": "cp -R dist/ ../../../api.blockhub.gg && cd ../../../api.blockhub.gg && git add -A && git commit -m \"Rebuild\" && git push && cd ../../../blockhub/services/web",
        "deploy": "npm run deploy-beta && npm run deploy-staging && npm run deploy-preview && npm run deploy-production"
    },
    "semistandard": {
        "globals": [
            "after",
            "afterEach",
            "before",
            "beforeEach",
            "describe",
            "it"
        ]
    },
    "dependencies": {
        "@feathersjs/authentication": "^2.1.13",
        "@feathersjs/authentication-jwt": "^2.0.7",
        "@feathersjs/authentication-local": "^1.2.7",
        "@feathersjs/authentication-oauth2": "^1.0.3",
        "@feathersjs/configuration": "^1.0.2",
        "@feathersjs/express": "^1.2.7",
        "@feathersjs/feathers": "^3.2.3",
        "@feathersjs/socketio": "^3.2.7",
        "blockhub-node-sdk": "^1.3.0",
        "body-parser": "^1.18.3",
        "connect-session-knex": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "express-session": "^1.15.6",
        "feathers-errors": "^2.9.2",
        "feathers-hooks-common": "^4.19.4",
        "feathers-hooks-validate-joi": "^2.0.0",
        "feathers-logger": "^0.3.2",
        "feathers-memory": "^2.2.0",
        "feathers-objection": "^1.3.1",
        "helmet": "^3.15.0",
        "knex": "^0.15.2",
        "knex-migrate": "^1.7.0",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "mysql": "^2.16.0",
        "nodemailer": "^6.2.1",
        "objection": "^1.5.0-rc.4",
        "pg": "^7.7.1",
        "swagger-express-validator": "^0.1.1",
        "swagger-parser": "^6.0.2",
        "swagger-routes-express": "^2.0.0",
        "typescript": "^3.2.2",
        "typescript-formatter": "^7.2.2",
        "underscore": "^1.9.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.13.0",
        "eslint-config-marine": "^3.0.2",
        "nodemon": "^1.18.10",
        "ts-node": "^8.3.0"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "marine/node"
        ],
        "rules": {
            "quote-props": 0,
            "func-names": 0,
            "guard-for-in": 0,
            "@typescript-eslint/semi": [
                "error",
                "never"
            ],
            "@typescript-eslint/indent": [
                "error",
                4
            ],
            "indent": [
                "error",
                4
            ],
            "space-before-function-paren": [
                "error",
                "always"
            ]
        }
    }
}

{
    "name": "@hyperbridge/blockhub-node-sdk",
    "description": "BlockHub Node.js SDK",
    "repository": {},
    "license": "SEE LICENSE IN LICENSE.md",
    "version": "1.3.0",
    "publishConfig": {
        "access": "public"
    },
    "main": "src/index.ts",
    "scripts": {
        "tsc": "./node_modules/tsc",
        "watch": "tsc -w",
        "format": "./node_modules/.bin/tsfmt -r",
        "build-development": "npm run format && tsc --listEmittedFiles",
        "build-production": "cp -R src build && node_modules/.bin/tsc",
        "build": "npm run build-development"
    },
    "semistandard": {
        "globals": [
            "after",
            "afterEach",
            "before",
            "beforeEach",
            "describe",
            "it"
        ]
    },
    "dependencies": {
        "bip39": "^2.5.0",
        "bluebird": "^3.5.3",
        "hyperbridge-funding-protocol": "^1.0.13",
        "hyperbridge-marketplace-protocol": "^1.0.13",
        "hyperbridge-reserve": "^1.0.13",
        "hyperbridge-token": "^1.0.12",
        "truffle-contract": "^3.0.5",
        "truffle-hdwallet-provider": "^0.0.6",
        "typescript": "^3.2.2",
        "typescript-formatter": "^7.2.2",
        "web3": "^0.20.1"
    },
    "babel": {
        "presets": [
            "es2015"
        ],
        "env": {
            "development": {
                "presets": []
            },
            "production": {
                "presets": []
            },
            "test": {
                "presets": []
            }
        }
    }
}

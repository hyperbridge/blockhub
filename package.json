{
    "name": "blockhub-web-client",
    "version": "0.1.0",
    "repository": "git@github.com:hyperbridge/blockhub-web-client.git",
    "license": "UNLICENSED",
    "main": "./build/index.js",
    "scripts": {
        "build": "yarn run tsc --listEmittedFiles",
        "format": "./node_modules/.bin/tsfmt -r src/app/electron.ts",
        "start": "react-scripts start",
        "electron": "tsc && ELECTRON_ENABLE_LOGGING=1 electron .",
        "test": "react-scripts test --env=jsdom",
        "chrome": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome --disable-web-security --user-data-dir",
        "build-mac": "yarn run electron-packager -- . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=build"
    },
    "theme": {
        "primary-color": "#dacd08",
        "heading-color": "#fff",
        "text-color": "#fff",
        "text-color-secondary": "#fff"
    },
    "dependencies": {
        "@types/react": "^16.0.0",
        "antd": "^3.3.1",
        "antd-mobile": "^1.4.2",
        "babel-cli": "^6.24.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-preset-react-app": "^3.0.1",
        "babel-preset-stage-1": "^6.24.1",
        "cors": "^2.8.4",
        "d3": "^3.5.16",
        "d3-dsv": "^1.0.7",
        "d3fc": "^7.0.0",
        "d3plus": "^1.9.8",
        "d3plus-react": "^0.2.13",
        "dateformat": "^1.0.12",
        "electron-packager": "^9.1.0",
        "flow-bin": "^0.50.0",
        "immutable": "^3.8.1",
        "isomorphic-fetch": "^2.2.1",
        "lokijs": "^1.5.3",
        "opn": "^5.1.0",
        "querystring": "^0.2.0",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-hotkeys": "^0.10.0",
        "react-redux": "^5.0.5",
        "react-router": "^4.1.2",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "next",
        "react-scripts": "https://github.com/ericmuyser/react-relay-scripts.git",
        "react-split-pane": "^0.1.66",
        "redux": "^3.7.1",
        "redux-thunk": "^2.2.0",
        "sanitize.css": "^5.0.0",
        "socket.io-client": "^2.0.3",
        "styled-components": "^3.2.1",
        "terminal-in-react": "^3.5.1",
        "typescript": "^2.3.2",
        "typescript-formatter": "^5.2.0"
    },
    "engines": {
        "node": "7.4.0",
        "npm": "3.10.10"
    },
    "devDependencies": {
        "babel-plugin-import": "^1.2.1",
        "electron": "1.6.16",
        "less": "^2.7.2",
        "less-loader": "^4.0.5",
        "postcss-pxtorem": "^4.0.1",
        "svg-sprite-loader": "0.3.1",
        "typings": "^2.1.1"
    }
}

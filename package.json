{
  "name": "blockhub-desktop-client",
  "productName": "BlockHub",
  "version": "0.6.0",
  "description": "BlockHub Desktop Client",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "index.js",
  "scripts": {
    "build": "cd app && npm run build && cd .. && rm -rf build && cp -R app/ build",
    "copy-web": "cd ../blockhub-web-client && NODE_ENV=production npm run build && rm -rf ../blockhub-desktop-client/app/web && cp -R dist/ ../blockhub-desktop-client/app/web && cd ../blockhub-desktop-client",
    "package": "rm -rf dist/packages && npm run build && ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder --mac --win --linux",
    "package-test": "rm -rf dist/packages && npm run build && ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder --mac",
    "publish": "ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder --publish"
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {},
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4"
  },
  "optionalDependencies": {},
  "build": {
    "appId": "gg.blockhub.BlockHub",
    "productName": "BlockHub",
    "copyright": "Entertainment ðŸŽ®  by Hyperbridge",
    "asar": false,
    "removePackageScripts": false,
    "generateUpdatesFilesForAllChannels": true,
    "detectUpdateChannel": true,
    "compression": "normal",
    "directories": {
      "app": "build",
      "buildResources": "static",
      "output": "dist/packages"
    },
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "static/Icon-512.png",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "static/Icon-512.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "static/Icon-512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "synopsis": "BlockHub",
      "category": "Entertainment"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "installerIcon": "static/Icon-512.ico",
      "perMachine": true,
      "artifactName": "BlockHub-Setup-${version}.${ext}"
    },
    "afterPack": "./scripts/after-pack.js",
    "publish": [
      {
        "provider": "github",
        "owner": "hyperbridge",
        "repo": "blockhub-desktop-client"
      }
    ]
  }
}
